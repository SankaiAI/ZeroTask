# ZeroTask Environment Configuration
# Copy this file to .env and configure with actual credentials

# Database Configuration
DATABASE_URL=sqlite:///./zerotask.db

# API Configuration
API_HOST=localhost
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Daily Brief Settings
DAILY_BRIEF_HOUR=9

# Security Settings
APP_SECRET=your-secure-secret-key-here
MACHINE_ID=production-machine-001

# === SHARED SERVICE ACCOUNT CREDENTIALS (IT-MANAGED) ===

# GitHub Service Account
# Generated from GitHub service account with repo access
GITHUB_TOKEN=ghp_your_github_service_account_token_here

# Slack Company App
# Created at https://api.slack.com/apps for your organization
SLACK_APP_TOKEN=xapp-your_app_level_token_here
SLACK_BOT_TOKEN=xoxb-your_bot_user_oauth_token_here

# Gmail OAuth (Future Implementation)
# From Google Cloud Console OAuth 2.0 credentials
GOOGLE_CLIENT_ID=your_oauth_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_oauth_client_secret_here

# Development
DEBUG=false